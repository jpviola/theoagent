# Copy this file to .env.local and fill in values.
# Never commit .env.local.

# --- LLM providers (pick at least one) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Gemini (Google)
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Llama via an OpenAI-compatible endpoint (choose one approach)
# Generic (recommended if you use any OpenAI-compatible vendor)
LLAMA_OPENAI_COMPAT_BASE_URL=
LLAMA_OPENAI_COMPAT_API_KEY=
LLAMA_OPENAI_COMPAT_MODEL=

# OR Groq convenience vars
GROQ_API_KEY=
GROQ_MODEL=

# OR Together.ai convenience vars
TOGETHER_API_KEY=
TOGETHER_MODEL=

# Optional: Vercel AI Gateway (recommended on Vercel)
# AI_GATEWAY_API_KEY=

# --- Supabase (required for auth/features) ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# --- Payments (optional, only if you enable donations/subscriptions) ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# --- Other optional APIs ---
BIBLE_API_KEY=

# --- ElevenLabs (TTS + STT) ---
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_TTS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_TTS_OUTPUT_FORMAT=mp3_44100_128

# Public (safe) client hint for STT model id used with the realtime websocket.
NEXT_PUBLIC_ELEVENLABS_STT_MODEL_ID=scribe_v2_realtime
